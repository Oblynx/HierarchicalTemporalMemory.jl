# To be run from project root

project_root=`pwd`
#project_root="${1:-$project_root}"

docker build -t "htm.jl" .
# --net=host includes unix sockets!!!
docker run --rm -it --name "htm.jl" \
           -v "$project_root/":"/htm.jl/" \
           --device=/dev/dri/renderD128 \
           --ipc host \
           -e DISPLAY \
           --net=host \
           htm.jl ${1:+"$1"}

           #-v /tmp/.X11-unix:/tmp/.X11-unix \
